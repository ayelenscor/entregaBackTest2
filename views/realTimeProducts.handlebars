<div class="container">
  <h1>‚ö° Productos en Tiempo Real</h1>
  
  <a href="/">‚Üê Volver al listado</a>
  
  <section>
    <h2>‚ûï Crear Nuevo Producto</h2>
    <form id="createProductForm">
      <div>
        <label>T√≠tulo:</label>
        <input name="title" placeholder="Ej: Zapatillas Running" required />
      </div>
      <div>
        <label>Descripci√≥n:</label>
        <input name="description" placeholder="Descripci√≥n del producto" required />
      </div>
      <div>
        <label>C√≥digo:</label>
        <input name="code" placeholder="C√≥digo √∫nico" required />
      </div>
      <div>
        <label>Precio:</label>
        <input name="price" type="number" step="0.01" placeholder="0.00" required />
      </div>
      <div>
        <label>Stock:</label>
        <input name="stock" type="number" placeholder="Cantidad disponible" required />
      </div>
      <div>
        <label>Categor√≠a:</label>
        <input name="category" placeholder="Ej: Calzado Deportivo" required />
      </div>
      <div>
        <label>Thumbnails (URLs separadas por coma):</label>
        <input name="thumbnails" placeholder="URL1, URL2, URL3" />
      </div>
      <button type="submit">‚úì Crear Producto</button>
    </form>
  </section>
  
  <section>
    <h2>üì¶ Lista de Productos</h2>
    <ul id="productsList">
      {{#if products}}
        {{#each products}}
          <li data-id="{{this.id}}">
            <div>
              <strong>{{this.title}}</strong> - <span style="color: #667eea; font-weight: bold;">${{this.price}}</span>
            </div>
            <button class="deleteBtn" data-id="{{this.id}}">üóëÔ∏è Eliminar</button>
          </li>
        {{/each}}
      {{/if}}
    </ul>
  </section>
</div>

